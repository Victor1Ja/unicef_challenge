// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  @@map("users")
}

model Entity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name                 String
  description          String?
  type                 String
  schoolInfoFromEntity SchoolInfoFromEntity[]
  entityDataQuality    EntityDataQuality[]

  @@map("entities")
}

model ScholarLevel {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?

  scholarLevelBySchool ScholarLevelBySchool[]

  @@map("scholar_levels")
}

model Country {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String

  provinces Province[]

  @@map("countries")
}

model Province {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name      String
  countryId Int

  cities  City[]
  country Country @relation(fields: [countryId], references: [id])

  @@map("provinces")
}

model City {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name       String
  provinceId Int

  schools  School[]
  province Province @relation(fields: [provinceId], references: [id])

  @@map("cities")
}

model School {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name        String
  description String?

  cityId Int

  city                 City                   @relation(fields: [cityId], references: [id])
  scholarLevelBySchool ScholarLevelBySchool[]
  schoolInfoFromEntity SchoolInfoFromEntity[]
  schoolInfoCleaned    SchoolInfoCleaned[]

  @@map("schools")
}

model ScholarLevelBySchool {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schoolId       Int
  scholarLevelId Int

  school       School       @relation(fields: [schoolId], references: [id])
  scholarLevel ScholarLevel @relation(fields: [scholarLevelId], references: [id])

  @@map("scholar_level_by_school")
}

model SchoolInfoFromEntity {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  address       String?
  latitude      String?
  longitude     String?
  hasInternet   Boolean?
  internetSpeed String?

  schoolId Int
  entityId Int

  school School @relation(fields: [schoolId], references: [id])
  entity Entity @relation(fields: [entityId], references: [id])

  @@map("school_info_from_entity")
}

model SchoolInfoCleaned {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schoolId            Int
  address             String?
  latitude            String?
  longitude           String?
  geolocationAccuracy String?
  hasInternet         Boolean?
  internetSpeed       String?

  school School @relation(fields: [schoolId], references: [id])

  @@map("school_info_cleaned")
}

model EntityDataQuality {
  entityId  Int      @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  addressQuality     Int?
  geolocationQuality Int?
  hasInternetQuality Int?
  internetSpeed      Int?

  entity Entity @relation(fields: [entityId], references: [id])

  @@map("entity_data_quality")
}
